{
    "include": ["lib", "dist/types"],
    "compilerOptions": {
        "outDir": "dist/esm",
        "module": "ES2015",
        "lib": ["dom", "ES2015"],
        "importHelpers": true,
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "target": "ES2015",
        "paths": {
            "*": ["lib/*", "node_modules/*"]
        },
        "jsx": "react",
        "esModuleInterop": true,
        "typeRoots": ["./dist/types", "./node_modules/@types"],
        "declarationDir": "./dist/types"
    }
}